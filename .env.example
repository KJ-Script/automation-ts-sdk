# =================================
# AI-Powered Browser Automation SDK
# Environment Configuration
# =================================

# REQUIRED: Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyBAqnwX1F74tP53HKIxlHCDJPGRjp2QxqE

# OPTIONAL: AI Model Configuration
# Default: gemini-2.0-flash-exp
# Available: gemini-2.0-flash-exp, gemini-1.5-pro, etc.
GEMINI_MODEL=gemini-1.5-flash

# OPTIONAL: Browser Configuration
# Browser type: chrome, firefox, safari
DEFAULT_BROWSER_TYPE=chrome

# Browser mode: true for headless, false for visible
DEFAULT_HEADLESS=false

# Default viewport size
DEFAULT_VIEWPORT_WIDTH=1400
DEFAULT_VIEWPORT_HEIGHT=900

# Default timeout in milliseconds
DEFAULT_TIMEOUT=30000

# OPTIONAL: AI Agent Configuration
# Maximum number of retries for failed tasks
MAX_RETRIES=3

# Enable debug mode for detailed logging
DEBUG_MODE=true

# OPTIONAL: Custom User Agent
# Leave empty to use default browser user agent
CUSTOM_USER_AGENT=

# OPTIONAL: Screenshot Configuration
# Directory to save screenshots (relative to project root)
SCREENSHOT_DIR=screenshots

# OPTIONAL: Data Extraction Configuration
# Directory to save extracted data (relative to project root)
DATA_OUTPUT_DIR=extracted-data

# OPTIONAL: Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable file logging
LOG_TO_FILE=false

# Log file path (relative to project root)
LOG_FILE_PATH=logs/automation.log

# OPTIONAL: Development Configuration
# Enable TypeScript source maps in development
ENABLE_SOURCE_MAPS=true

# Enable hot reload for development
ENABLE_HOT_RELOAD=false

# OPTIONAL: Performance Configuration
# Maximum memory usage in MB (0 = unlimited)
MAX_MEMORY_MB=0

# Maximum execution time per task in milliseconds
MAX_EXECUTION_TIME=300000

# OPTIONAL: Network Configuration
# Request timeout in milliseconds
REQUEST_TIMEOUT=10000

# Maximum number of redirects to follow
MAX_REDIRECTS=5

# OPTIONAL: Security Configuration
# Disable JavaScript execution (for security)
DISABLE_JAVASCRIPT=false

# Disable image loading (for performance)
DISABLE_IMAGES=false

# Disable CSS loading (for performance)
DISABLE_CSS=false

# OPTIONAL: Proxy Configuration
# HTTP proxy URL (format: http://user:pass@host:port)
HTTP_PROXY=

# HTTPS proxy URL
HTTPS_PROXY=

# Proxy bypass list (comma-separated)
NO_PROXY=localhost,127.0.0.1

# =================================
# Example Usage:
# 1. Copy this file to .env
# 2. Replace placeholder values with actual values
# 3. Get your Gemini API key from Google AI Studio
# 4. Run: npm run ai-basic
# =================================
